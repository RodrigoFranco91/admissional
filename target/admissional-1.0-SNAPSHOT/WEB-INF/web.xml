    </servlet>
    <servlet>
        <servlet-name>DeletaProfessorServlet</servlet-name>
        <servlet-class>br.com.rodrigo.admissional.servlet.professor.DeletaProfessorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlteraProfessorServlet</servlet-name>
        <servlet-class>br.com.rodrigo.admissional.servlet.professor.AlteraProfessorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormUpdateProfessorServlet</servlet-name>
        <servlet-class>br.com.rodrigo.admissional.servlet.professor.FormUpdateProfessorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormProfessorServlet</servlet-name>
        <url-pattern>/FormProfessorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroProfessorServlet</servlet-name>
        <url-pattern>/CadastroProfessorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaProfessoresServlet</servlet-name>
        <url-pattern>/ListaProfessoresServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletaProfessorServlet</servlet-name>
        <url-pattern>/DeletaProfessorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlteraProfessorServlet</servlet-name>
        <url-pattern>/AlteraProfessorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormUpdateProfessorServlet</servlet-name>
        <url-pattern>/FormUpdateProfessorServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
